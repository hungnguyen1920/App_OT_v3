<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="App_OT_v3.Views.CoursePage">
    <Shell.TitleView>
        <Image Source="LogoPeopleLink.png" />
    </Shell.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Khóa học bắt buộc"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnButtonPrivateCourseClicked" />
            <Button Text="Khóa học khác"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnButtonPublicCourseClicked" />
            <Button Text="Khóa học đã đăng ký"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnButtonActivedCourseClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>